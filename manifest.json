{
  "manifest_version": 2 ,

  "name": "Saveit Pasteit",
  "description":"Offline extension which saves your important text information and provides you easy paste experience in just couple of clicks",
  "version" : "2.4.2",

  "author": "Shubham Aggarwal",
  "short_name":"SP",

  "offline_enabled":false,

  "browser_action":{
    "default_icon": "icons/48x48.png",
    "default_popup": "popup.html",
    "default_title":"Do you want to store important Links !"
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/google_api_jquery.js","js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/google_api_jquery.js","js/bililiteRange.js" ,"js/jquery.sendkeys.js","js/content.js"]
    }
  ],

  "permissions":[
    "contextMenus"
  ]
}